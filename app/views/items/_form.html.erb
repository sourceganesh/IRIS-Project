<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label for="Title" class="col-sm-2 col-form-label">
    <%= form.label :title %></label>
    <div class="col-sm-10">
    <%= form.text_field :title, class:"form-control", id:"Title", placeholder:"Title" %>
  </div>
  </div>

  <div class="form-group row">
     <label class="col-sm-2 col-form-label" for="validatedCustomFile">
       <%= form.label :image %></label>
      <%= form.file_field :image, class:"form-control-file", id:"validatedCustomFile", placeholder:"Image" %>
    </div>


  <div class="form-group row">
    <label for="Desc" class="col-sm-2 col-form-label">
    <%= form.label :description %></label>
    <div class="col-sm-10">
    <%= form.text_area :description, class:"form-control", id:"Desc", placeholder:"Description" %>
  </div>
</div>


<div class="form-group row">
  <label for="Bid" class="col-sm-2 col-form-label">
    <%= form.label :bid %></label>
    <div class="col-sm-10">
    <%= form.number_field :bid, class:"form-control", id:"Bid", placeholder:"Bid" %>
  </div>
  </div>

  <div class="form-group row">
    <label for="Dead" class="col-sm-2 col-form-label">
    <%= form.label :deadline %></label>
    <div class="col-sm-10">
    <%= form.datetime_select :deadline, class:"form-control", id:"Dead", placeholder:"Deadline" %>
  </div>
  </div>

  <div class="form-group row">
    <label for="Con" class="col-sm-2 col-form-label">
    <%= form.label :contact %></label>
    <div class="col-sm-10">
    <%= form.number_field :contact, class:"form-control", id:"Con", placeholder:"Contact" %>
  </div>
  </div>

  <div class="actions">
    <%= form.submit "Create", class:"btn btn-dark"%>
  </div>
<% end %>
