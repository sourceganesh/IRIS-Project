<%if !current_user %>
<div class="center jumbotron">
    <h3>Kindly Log In/Sign Up</h3>
    <h2><%= link_to " Sign Up", new_user_registration_path, class:"btn btn-primary btn-lg" %>
    <%= link_to " Log In", new_user_session_path, class:"btn btn-primary btn-lg" %></h2>
  </div>
<%end%>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Bid</th>
      <th>Deadline</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.bid %></td>
        <td><%= item.deadline %></td>
        <td><%= item.contact %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Bid/Claim', items_bid_path(item) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
