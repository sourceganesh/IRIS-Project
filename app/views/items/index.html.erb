<%if !current_user %>
<div class="center jumbotron">
    <h3>Kindly Log In/Sign Up</h3>
    <h2><%= link_to " Sign Up", new_user_registration_path, class:"btn btn-dark btn-lg" %>
    <%= link_to " Log In", new_user_session_path, class:"btn btn-dark btn-lg" %></h2>
  </div>
<%end%>

<div class="center jumbotron" id="head">
<h1>Items</h1>
</div>

<div class="grid-container"">
<% @items.each do |item| %>
<div class="card">
  <div class="bg-img"><%= link_to image_tag(item.image, style:"width:100%"), items_path%></div>
  <div class="content">
    <h4><%=item.title%></h4>
    <p><%=item.description%></p> <p><%=item.bid%></p> <%= link_to "Show", item, class:"btn btn-dark" %> <%= link_to 'Bid|Claim', items_bid_path(item), class:"btn btn-dark" %></div>
</div>

<% end %>
</div>



<br>
